<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Launched from PB, this flow will match the Service History record whose Date of Service equals the Date used in the rollup.  It will then populate the &apos;Current Lubricant&apos; field with the &apos;Lubricant Used&apos; value from the Service record.</description>
    <interviewLabel>Current Lubricant Lookup and Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Current Lubricant Lookup and Update</label>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>ServiceHistoryLookup</name>
        <label>ServiceHistoryLookup</label>
        <locationX>276</locationX>
        <locationY>271</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>UpdateSerialNumberRecord</targetReference>
        </connector>
        <filters>
            <field>Date_of_Service__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>DateOfService</elementReference>
            </value>
        </filters>
        <object>Service_History__c</object>
        <outputReference>ServiceHistory</outputReference>
        <queriedFields>Lubricant_Used__c</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>UpdateSerialNumberRecord</name>
        <label>UpdateSerialNumberRecord</label>
        <locationX>431</locationX>
        <locationY>270</locationY>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>AssetID</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Current_Lubricant__c</field>
            <value>
                <elementReference>ServiceHistory.Lubricant_Used__c</elementReference>
            </value>
        </inputAssignments>
        <object>Asset</object>
    </recordUpdates>
    <startElementReference>ServiceHistoryLookup</startElementReference>
    <status>Active</status>
    <variables>
        <name>AssetID</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>DateOfService</name>
        <dataType>Date</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <name>ServiceHistory</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>Service_History__c</objectType>
    </variables>
</Flow>
