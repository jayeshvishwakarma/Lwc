        <label>License Available</label>
        <locationX>400</locationX>
        <locationY>149</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_avail</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>licenseAvailable</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_License</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>Add CPQ license when new community member is created</description>
    <formulas>
        <description>Is a license available to assign</description>
        <name>licenseAvailable</name>
        <dataType>Boolean</dataType>
        <expression>IF ({!packageLicense.AllowedLicenses} - {!packageLicense.UsedLicenses} &gt;=1 || {!packageLicense.AllowedLicenses} == -1, true, false)</expression>
    </formulas>
    <formulas>
        <name>PSLlicenseAvail</name>
        <dataType>Boolean</dataType>
        <expression>IF( {!packageLicense.AllowedLicenses} -{!packageLicense.UsedLicenses} &gt; 1, true, false)</expression>
    </formulas>
