    <formulas>
        <description>create default alias</description>
        <name>alias</name>
        <dataType>String</dataType>
        <expression>IF(LEN(LEFT({!contactFirstName},1)+{!contactLastname}) &gt;7, 
LOWER(LEFT(LEFT({!contactFirstName},1)+{!contactLastname},7)),
LOWER(LEFT({!contactFirstName},1)+{!contactLastname})
)</expression>
    </formulas>
    <formulas>
        <description>set the language key</description>
        <name>customerlanguagekey</name>
        <dataType>String</dataType>
        <expression>CASE({!communityUser.Customer_Language__c},
&quot;English&quot;, &quot;en_US&quot;,
&quot;Spanish&quot;, &quot;es_MX&quot;,
&quot;French&quot;, &quot;fr&quot;,
&quot;Portuguese&quot;, &quot;pt_BR&quot;,
&quot;en_US&quot;)</expression>
    </formulas>
    <formulas>
        <description>Based on the Customer Language, set the locale</description>
        <name>Locale</name>
        <dataType>String</dataType>
        <expression>CASE(
{!communityUser.Customer_Language__c},
&quot;English&quot;, &quot;en_US&quot;,
&quot;French&quot;, &quot;fr_CA&quot;,
&quot;Portuguese&quot;, &quot;pt_BR&quot;,
&quot;Spanish&quot;, &quot;es_MX&quot;,
&quot;en_US&quot;)</expression>
    </formulas>
    <formulas>
        <name>ManageOtherProds</name>
