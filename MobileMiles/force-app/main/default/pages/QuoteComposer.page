<script>
$(function() {
    $('input[type="text"]').keyup(function(e) {
        if (e.keyCode == 40) {
            $(this).closest('tr').next('tr').find('input').focus();
        } else if (e.keyCode == 38) {
            $(this).closest('tr').prev('tr').find('input').focus();
        }
    });
});
</script>

