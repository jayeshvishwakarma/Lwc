<apex:page renderAs="pdf" showHeader="false" applyHtmlTag="false" applyBodyTag="false" standardController="Quote" extensions="QuotePDFController">
     <html>
        <head>
            <style>
 
                p,h1,h2,h3,body,td,th,li,header,footer,* {
                    font-family: Arial,Helvetica,SansSerif,sans-serif;
                }
                p,h1,h2,h3,body,td,th,li,header,footer {
                    font-size: 10pt;
                }
                h1,h2 {
                    font-size: 12pt;
                }
                
                td,th {
                    vertical-align:top;
                }

                .quoteTable tbody td {
                    border-bottom: 0.5pt solid gray;
                    padding: 0 0.5em;
                    text-align: right;
                }
                .quoteTable thead th {
                    background-color: #CCD7E7;
                    font-size: 8pt;
                    padding: 0.5em 0.5em;
                    text-align: left;
                }
                .quoteTable tfoot td {
                    text-align: left;
                    padding: 0.5em 0.5em;
                    background-color: #CCD7E7;
                    font-weight: bold;
                }
 
 
                @page { 
                    size: A4;
                    width: 210mm;
                    height: 297mm;
                    margin-top: 4cm;
                    margin-bottom: 1cm;
                    margin-left: 1.5cm;  
                    margin-right: 1.5cm;  


                    @top-left {
                        content: element(page-top-left);
                    }
                    @top-right {
                        content: element(page-top-right);
                    }
                    @bottom-left {
                        content: element(page-bottom-left);
                    }
                    @bottom-right {
                        content: element(page-bottom-right);
                    }
                }
/*
                @page :first { 
                    margin-top: 0;
                    @top-right, @top-left {
                        content: '';
                        height: 3cm;
                    }
                }
                */

                @media screen {
                    header.onlyprint, footer.onlyprint {
                        display: none;
                    }
                }

                @media print {
                    header.onlyprint, footer.onlyprint {
                        display: block;
                    }

                    
                    header.page-top-left {
                        display: block;
                        position: running(page-top-left);
                    }
                    header.page-top-right {
                        display: block;
                        position: running(page-top-right);
                    }
                    footer.page-bottom-left {
                        display: block;
                        position: running(page-bottom-left);
                    }
                    footer.page-bottom-right {
                        display: block;
                        position: running(page-bottom-right);
                    }
                }
                
                .currentPage:before { content: counter(page); }
                .totalPages:before { content: counter(pages); }
            </style>
        </head>
        <body>

                        

