        //Total Amount Calculation for Credit Debit
        function totalAmountCalcCreditDebit(){
            var settlement='{!settlementType}';
            var recordType='{!packageRecordType}';
            var exchangeRate = '{!exchangeRate}'; //CT Multi currency changes
