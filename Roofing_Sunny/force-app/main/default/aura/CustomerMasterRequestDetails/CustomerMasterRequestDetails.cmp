                                                                 <div style="{!if(v.newActRec.Will_Customer_Use_EDI__c != v.originalActRec.Will_Customer_Use_EDI__c, 'background-color: #FFFF00','')}" >
                                                                <lightning:outputField variant="label-hidden" fieldName="Will_Customer_Use_EDI__c" />                                                 
                                                                </div>
                                                            </div> 
                                                        </aura:if>
                                                         <aura:if isTrue ="{!v.newActRec.EDPAR__c != null}">
