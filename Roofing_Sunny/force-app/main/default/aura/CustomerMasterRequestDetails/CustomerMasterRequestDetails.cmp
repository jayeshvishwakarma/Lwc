                                                                <div style="{!if(v.newActRec.Job_Site__c != v.originalActRec.Job_Site__c, 'background-color: #FFFF00','')}" >
                                                                <lightning:outputField variant="label-hidden" fieldName="Job_Site__c" /> 
                                                                </div>
                                                            </div>
                                                        </aura:if>
                                                        <aura:if isTrue ="{!v.newActRec.Will_Customer_Use_EDI__c != null}">
                                                            <div class="slds-form-element slds-size--1-of-5">                         
