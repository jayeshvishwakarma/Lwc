                                                                <span class="slds-form-element__label">Solar</span>
                                                                <div style="{!if(v.newActRec.Solar__c != v.originalActRec.Solar__c, 'background-color: #FFFF00','')}" >
                                                                <lightning:outputField variant="label-hidden" fieldName="Solar__c" />                                  
                                                                </div>
                                                            </div> 
                                                        </aura:if>
                                                        <aura:if isTrue ="{!v.newActRec.Job_Site__c != null}">
