                    <c:ChangeShipToInformation aura:id="chgShipTo" recordId="{!v.recordId}" accountId="{!v.request.AccountId}" changeaccountId="{!v.request.Change_Info_Account__c}" caseId="{!v.recordId}"/>
                    <aura:set attribute="else">
                        <lightning:recordViewForm recordId="{!v.request.Change_Info_Account__c}" objectApiName="Account">  
                            <div style="background-color:white; padding-left: 20px;padding-bottom: 10px;" class="parent">
                                <fieldset class="slds-form--compound">                                
                                    <div class="form-element__group">   
                                        <legend class="slds-text-heading--small slds-p-vertical--medium">Account Shipping Information</legend>                    
                                        <div class="slds-form-element__row">
                                            <div class="slds-form-element slds-size--1-of-3">       
                                                <span class="slds-form-element__label">Sales Org</span>
                                                <div style="{!if(v.newActRec.LOB__c != v.originalActRec.LOB__c, 'background-color: #FFFF00','')}" >
                                                <lightning:outputField variant="label-hidden" fieldName="Sales_Org__c" />
                                                </div>
                                            </div>   
                                            <aura:if isTrue="{!v.request.Origin != null}">                                          
                                                <div class="slds-form-element slds-size--1-of-3">       
                                                    <span class="slds-form-element__label">Sales Region</span>
                                                    
                                                    <br/>{!v.customerregion}
                                                </div>                                             
                                            </aura:if>
                                            <aura:if isTrue="{!v.request.Sales_Rep__c != null}">
                                                
