<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" controller="CustomerOnboardingController">
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="newActRec" type="Account" />
    <aura:attribute name="originalActRec" type="Account" />
    <aura:attribute name="request" type="Case"/>   
    <aura:attribute name="pricesheetVal" type="String"/>
    <aura:attribute name="soldActNo" type="String"/>
    <aura:attribute name="shipToActName" type="String"/>
    <aura:attribute name="customerregion" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />  
    <aura:attribute name="loggedinUser" type="User"/>  
    <div class="slds-text-heading--large slds-text-align--center">{!v.request.Type}</div>   
    
    <div class="slds-form-element__row">
        <div class="slds-form-element slds-size--1-of-1">                
            <aura:if isTrue="{!equals(v.request.Type, 'New Ship-To Account Request')}"> 
